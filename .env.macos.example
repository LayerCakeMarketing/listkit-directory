# Listerino/ListKit - macOS Development Environment Configuration
# Copy this file to .env and update values as needed

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Listerino
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_FRONTEND_URL=http://localhost:5173
SPA_MODE=true
FRONTEND_BUILD_PATH=frontend/dist

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=listerino_local
DB_USERNAME=listerino
DB_PASSWORD=localdev123

# ============================================
# SESSION & SECURITY
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# ============================================
# CACHE & QUEUE CONFIGURATION
# ============================================
CACHE_STORE=array
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log

# ============================================
# REDIS (Optional - uncomment if using Redis)
# ============================================
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# CACHE_STORE=redis
# SESSION_DRIVER=redis

# ============================================
# AUTHENTICATION (Laravel Sanctum)
# ============================================
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:8000,127.0.0.1:5173,127.0.0.1:8000

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_MAILER=log
MAIL_FROM_ADDRESS=noreply@listerino.local
MAIL_FROM_NAME="${APP_NAME}"

# For SendGrid (production):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key_here
# MAIL_ENCRYPTION=tls

# ============================================
# CLOUDFLARE IMAGES (Optional)
# ============================================
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_IMAGES_TOKEN=
CLOUDFLARE_ACCOUNT_HASH=nCX0WluV4kb4MYRWgWWi4A

# ============================================
# MAPBOX INTEGRATION (Optional)
# ============================================
MAPBOX_PUBLIC_TOKEN=
MAPBOX_SECRET_TOKEN=

# ============================================
# STRIPE PAYMENT PROCESSING (Optional)
# ============================================
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DEVELOPMENT TOOLS
# ============================================
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=false

# ============================================
# FILESYSTEM
# ============================================
FILESYSTEM_DISK=local
ASSET_URL="${APP_URL}/storage"

# ============================================
# RATE LIMITING
# ============================================
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# ============================================
# MISC SETTINGS
# ============================================
TIMEZONE=America/Los_Angeles
LOCALE=en
FALLBACK_LOCALE=en
FAKER_LOCALE=en_US