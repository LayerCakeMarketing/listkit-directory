# Business Claiming & Subscription Configuration

# Stripe Configuration
STRIPE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Stripe Price IDs for subscription tiers
STRIPE_PRICE_TIER1=price_tier1_monthly_999
STRIPE_PRICE_TIER2=price_tier2_monthly_1999

# Twilio Configuration (for SMS verification)
TWILIO_SID=your_twilio_account_sid
TWILIO_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890

# Email Configuration (for claim notifications)
MAIL_FROM_ADDRESS=claims@yourdomain.com
MAIL_FROM_NAME="${APP_NAME} Claims"

# Testing Mode Configuration
CLAIMING_TEST_MODE=true
CLAIMING_TEST_OTP=123456
CLAIMING_AUTO_APPROVE=false

# Frontend Testing (add to frontend/.env)
# VITE_CLAIMING_TEST_MODE=true